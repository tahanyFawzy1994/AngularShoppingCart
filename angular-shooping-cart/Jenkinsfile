pipeline {

    agent any
    tools {nodejs "node"}
    stages {
      stage('install'){
        steps {
                echo 'Installing...'
              dir ('angular-shooping-cart'){
                bat 'npm install'
              }
            }
      }
        stage('Build') {
            steps {
                echo 'Building...'
              dir ('angular-shooping-cart'){
                bat 'ng build --prod'
              }
            }
		}
          stage('Run') {
            steps {
                echo 'Running...'
              dir ('angular-shooping-cart'){
                bat 'ng serve'
              }
            }
        
        }
    }
}
